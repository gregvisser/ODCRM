# Frontend Environment Variables
# Copy this file to .env.local for local development
# In production (Vercel), set these in the Vercel dashboard

# API Base URL - where the backend is hosted
# Local dev: http://localhost:3001
# Production: https://api.bidlow.co.uk
VITE_API_URL=http://localhost:3001

# Azure AD / Microsoft Authentication
# Get these from your Azure App Registration
VITE_AZURE_CLIENT_ID=your-client-id-here
VITE_AZURE_TENANT_ID=your-tenant-id-here
VITE_AZURE_REDIRECT_URI=http://localhost:5173
VITE_AZURE_AUTHORITY=

# Authorization - Optional email/domain restrictions
# Comma-separated list of allowed emails or domains
VITE_AUTH_ALLOWED_EMAILS=
VITE_AUTH_ALLOWED_DOMAINS=
