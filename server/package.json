{
  "name": "odcrm-server",
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": "24.x"
  },
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "postinstall": "prisma generate --schema=./prisma/schema.prisma",
    "prisma:generate": "prisma generate --schema=./prisma/schema.prisma",
    "prisma:migrate:dev": "prisma migrate dev --schema=./prisma/schema.prisma",
    "prisma:migrate:deploy": "prisma migrate deploy --schema=./prisma/schema.prisma",
    "prisma:studio": "prisma studio --schema=./prisma/schema.prisma",
    "prisma:push": "prisma db push --schema=./prisma/schema.prisma",
    "prisma:reset": "prisma migrate reset --schema=./prisma/schema.prisma",
    "setup:dev": "npm install && npm run prisma:generate && echo 'âœ… Setup complete! Next: Create .env file and run npm run prisma:migrate:dev'",
    "setup:prod": "npm install && npm run prisma:generate && npm run prisma:migrate:deploy"
  },
  "dependencies": {
    "@azure/identity": "^4.0.0",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@prisma/client": "^5.19.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.9",
    "@types/node-cron": "^3.0.11",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "node-cron": "^3.0.3",
    "prisma": "^5.19.0",
    "typescript": "^5.5.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/nodemailer": "^7.0.5",
    "tsx": "^4.16.1"
  }
}
